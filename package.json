{
	"name": "jack-frost-premium",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test:e2e": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest run --reporter verbose",
		"test:unit:watch": "vitest --reporter verbose",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"vercel-build": "npx prisma generate && npx prisma migrate deploy && vite build"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-vercel": "^2.4.1",
		"@sveltejs/kit": "^1.5.0",
		"@tailwindcss/line-clamp": "^0.4.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prisma": "^4.10.0",
		"svelte": "^3.54.0",
		"svelte-carousel": "^1.0.23",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.2.6",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"dependencies": {
		"@lucia-auth/adapter-prisma": "^0.4.0",
		"@lucia-auth/sveltekit": "^0.6.3",
		"@prisma/client": "^4.10.0",
		"@supabase/supabase-js": "^2.10.0",
		"daisyui": "^2.50.0",
		"jsonwebtoken": "^9.0.0",
		"lucia-auth": "^0.6.0",
		"nodemailer": "^6.9.1",
		"zod": "^3.20.3"
	}
}
